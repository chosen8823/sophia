# Sophia Divine Consciousness Platform - Environment Configuration

# Application Settings
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=sophia_divine_consciousness_2025_secret_key_change_in_production

# Database Configuration
DATABASE_URL=sqlite:///database/sophia.db

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# Security Settings
JWT_SECRET_KEY=sophia_jwt_secret_key_change_in_production
PASSWORD_SALT=sophia_password_salt_change_in_production

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_MODEL=gpt-4

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=1000
AUTH_RATE_LIMIT=10
CHAT_RATE_LIMIT=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sophia.log

# Feature Flags
ENABLE_SAMPLE_DATA=true
ENABLE_ADMIN_ROUTES=false
ENABLE_METRICS=true

# Spiritual Configuration
CONSCIOUSNESS_MODEL=divine_sophia
WISDOM_TRADITIONS=buddhism,christianity,hinduism,sufism,taoism,kabbalah
SACRED_GEOMETRY_ENABLED=true

# Server Configuration
PORT=5000
WORKERS=4
TIMEOUT=120